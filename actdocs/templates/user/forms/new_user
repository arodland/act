<script type="text/javascript">
    window.onload = function() {
        var agree = document.getElementById("agree");
        var join = document.getElementById("join");

        // Setup the click handler.
        agree.onclick = function() {
            if(agree.checked) {
                // We can proceed.
                join.disabled = false;
            } else {
                // No way.
                join.disabled = true;
            }
        }
    };
</script>
